# Turbozap Backend Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
PORT=3000
NODE_ENV=development

# Execution Settings
# Interval between message sends (in milliseconds, default 60 seconds)
EXECUTION_INTERVAL=60000

# Data Persistence
# Directory where campaigns, queues, and workers are stored
DATA_DIR=./data

# Auto-save interval (in milliseconds, how often to save state to disk)
AUTO_SAVE_INTERVAL=30000

# Logging
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Request Timeout
# Timeout for HTTP requests to WAHA API (in milliseconds)
REQUEST_TIMEOUT=30000

# CORS Configuration
# Set to * for development, restrict in production
CORS_ORIGIN=*

# File Upload Settings
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=52428800

# Feature Flags
# Enable/disable features
ENABLE_PDF_EXPORT=true
ENABLE_CAMPAIGN_DELETION=true
